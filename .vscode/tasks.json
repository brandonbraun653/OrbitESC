{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "CMake Clean",
      "type": "shell",
      "command": "mkdir -p ${workspaceFolder}/build && rm -rf ${workspaceFolder}/build/*",
      "problemMatcher": []
    },
    {
      "label": "Configure Simulator",
      "type": "shell",
      "command": "cmake -DTOOLCHAIN=gcc -DNATIVE_THREADS=ON -DDEVICE_TARGET=sim -DCMAKE_BUILD_TYPE=Debug ./../",
      "dependsOn": [
        "CMake Clean"
      ],
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "problemMatcher": []
    },
    {
      "label": "Configure Embedded Debug",
      "type": "shell",
      "command": "cmake -DTOOLCHAIN=arm-none-eabi -DFREERTOS_THREADS=ON -DDEVICE_TARGET=stm32l432kb -DCMAKE_BUILD_TYPE=Debug ./../",
      "dependsOn": [
        "CMake Clean"
      ],
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "problemMatcher": []
    },
    {
      "label": "Configure Embedded Release",
      "type": "shell",
      "command": "cmake -DTOOLCHAIN=arm-none-eabi -DFREERTOS_THREADS=ON -DDEVICE_TARGET=stm32l432kb -DCMAKE_BUILD_TYPE=Release ./../",
      "dependsOn": [
        "CMake Clean"
      ],
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "problemMatcher": []
    },
    {
      "label": "Build Current Configuration",
      "type": "shell",
      "command": "./build_embedded.sh",
      "options": {
        "cwd": "${workspaceFolder}/scripts"
      },
      "problemMatcher": []
    },
    {
      "label": "Dump Sections",
      "type":"shell",
      "command": "arm-none-eabi-objdump -w -d --section=.text OrbitESC > sections.txt",
      "options": {
        "cwd": "${workspaceFolder}/artifacts/last_build_version"
      },
      "problemMatcher": []
    },
    {
      "label": "Dump Largest Symbols",
      "type":"shell",
      "command": "arm-none-eabi-nm --print-size --size-sort --reverse-sort OrbitESC > sizes.txt",
      "options": {
        "cwd": "${workspaceFolder}/artifacts/last_build_version"
      },
      "problemMatcher": []
    }
  ]
}